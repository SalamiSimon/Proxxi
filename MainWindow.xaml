<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUI_V3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid x:Name="TitleBarArea" Grid.Row="0" Background="Transparent">
            <TextBlock Text="Response modifier for Proxifier" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="12,8,0,8"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation View -->
            <NavigationView x:Name="NavView"
                           Grid.Column="0"
                           PaneDisplayMode="Left"
                           IsSettingsVisible="False"
                           IsBackButtonVisible="Collapsed"
                           OpenPaneLength="150"
                           CompactPaneLength="48"
                           IsPaneToggleButtonVisible="False"
                           SelectionChanged="NavView_SelectionChanged"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="DarkRed"
                           BorderThickness="10,10,10,10">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Targets" Tag="targets">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE80F;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Settings" Tag="settings">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE713;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Info" Tag="info">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE946;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
            </NavigationView>

            <!-- Content Frame  ControlAltFillColorTransparentBrush  -->
            <Frame x:Name="ContentFrame" 
                   Grid.Column="1" 
                   Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush   }"/>
        </Grid>
    </Grid>
</Window>
