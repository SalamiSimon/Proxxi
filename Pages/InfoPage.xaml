<Page
    x:Class="WinUI_V3.Pages.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource SettingsPageStyle}">

    <ScrollViewer Padding="20,0,20,20">
        <StackPanel Spacing="24" MaxWidth="600" HorizontalAlignment="Center">
            <!-- App Title and Version -->
            <StackPanel Spacing="8" Margin="0,40,0,20">
                <TextBlock Text="Response Modifier" 
                           FontSize="32" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText" 
                           Text="Version 1.0.0" 
                           FontSize="16" 
                           Opacity="0.7" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Author Info -->
            <StackPanel Spacing="12" HorizontalAlignment="Center" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" 
                              Glyph="&#xE946;" 
                              FontSize="24" 
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="SalamiSimon" 
                               FontSize="22" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="https://github.com/SalamiSimon" 
                           Opacity="0.7" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Divider -->
            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}"/>
            
            <!-- Instructions -->
            <StackPanel Spacing="12" Margin="0,8,0,0">
                <TextBlock Text="Instructions" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBox x:Name="InstructionsTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="180"
                         Padding="12"
                         PlaceholderText="Instructions will be shown here."
                         Text="Response Modifier allows you to intercept and modify HTTP responses.
                         
1. Configure the proxy server in Settings
2. Add targets in the Targets page
3. Enable the targets you want to modify
4. Start the proxy server
                         
For more detailed instructions, visit the GitHub repository."/>
            </StackPanel>
            
            <!-- GitHub Button -->
            <HyperlinkButton Content="View on GitHub"
                             NavigateUri="https://github.com/SalamiSimon"
                             HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Page> 