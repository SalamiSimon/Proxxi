<Page
    x:Class="WinUI_V3.Pages.TargetsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource SettingsPageStyle}">

    <Page.Resources>
        <Style x:Key="DisabledItemStyle" TargetType="Border">
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}"/>
        </Style>
        <Style x:Key="EnabledItemStyle" TargetType="Border">
            <Setter Property="Opacity" Value="1.0"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Targets" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,20"/>

        <!-- Add Target Button -->
        <Button Grid.Row="1" 
                x:Name="AddTargetButton" 
                Content="Add Target" 
                Style="{StaticResource AccentButtonStyle}"
                Click="AddTargetButton_Click" 
                Margin="0,0,0,20"/>

        <!-- Target Items List -->
        <ListView Grid.Row="2" 
                  x:Name="TargetsListView" 
                  SelectionMode="None" 
                  Background="Transparent"
                  Margin="0,0,0,20">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0,4"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Target URL -->
                        <Border Grid.Column="0" 
                                CornerRadius="4" 
                                Padding="12,8"
                                Style="{Binding IsEnabled, Converter={StaticResource BoolToStyleConverter}, ConverterParameter='EnabledItemStyle|DisabledItemStyle'}">
                            <StackPanel>
                                <TextBlock Text="{Binding TargetUrl}" 
                                       VerticalAlignment="Center" 
                                       TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Type: " 
                                               FontSize="12" 
                                               Opacity="0.7"/>
                                    <TextBlock Text="{Binding IsStaticResponse, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Static|Dynamic'}" 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               Margin="4,0,0,0"/>
                                    
                                    <TextBlock Text=" | Match Status: " 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding HttpStatus, TargetNullValue='Any'}" 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               Margin="4,0,0,0"/>
                                    
                                    <TextBlock Text=" | Response Status: " 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding TargetHttpStatus, TargetNullValue='No Change'}" 
                                               FontSize="12" 
                                               Opacity="0.7" 
                                               Margin="4,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Toggle Enable/Disable Switch -->
                        <ToggleSwitch Grid.Column="1" 
                                      Margin="8,0,0,0"
                                      IsOn="{Binding IsEnabled, Mode=TwoWay}"
                                      OffContent=""
                                      OnContent=""
                                      ToolTipService.ToolTip="Enable/Disable Target"
                                      Tag="{Binding}"
                                      Toggled="EnableSwitch_Toggled"/>
                        
                        <!-- Edit Button -->
                        <Button Grid.Column="2" 
                                Margin="8,0,0,0" 
                                ToolTipService.ToolTip="Edit" 
                                Tag="{Binding}"
                                Click="EditTargetButton_Click">
                            <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                        </Button>
                        
                        <!-- Delete Button -->
                        <Button Grid.Column="3" 
                                Margin="8,0,0,0" 
                                ToolTipService.ToolTip="Delete" 
                                Tag="{Binding}"
                                Click="DeleteTargetButton_Click">
                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Add Target Dialog -->
        <ContentDialog x:Name="AddTargetDialog"
                      Title="Add Target"
                      PrimaryButtonText="OK"
                      CloseButtonText="Cancel"
                      DefaultButton="Primary"
                      PrimaryButtonClick="AddTargetDialog_PrimaryButtonClick">
            <StackPanel Spacing="16" Width="500">
                <!-- Target URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Target URL:" FontWeight="SemiBold"/>
                    <TextBox x:Name="TargetUrlTextBox" PlaceholderText="https://example.com/api/endpoint"/>
                </StackPanel>
                
                <!-- HTTP Status to Match -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Match HTTP Status:" FontWeight="SemiBold"/>
                    <TextBlock Text="Only modify responses with this status code. Select 'Any Status' to match all responses." 
                               FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                    <ComboBox x:Name="HttpStatusComboBox" HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Any Status" Tag="Any"/>
                        <ComboBoxItem Content="200 - OK" Tag="200"/>
                        <ComboBoxItem Content="201 - Created" Tag="201"/>
                        <ComboBoxItem Content="204 - No Content" Tag="204"/>
                        <ComboBoxItem Content="400 - Bad Request" Tag="400"/>
                        <ComboBoxItem Content="401 - Unauthorized" Tag="401"/>
                        <ComboBoxItem Content="403 - Forbidden" Tag="403"/>
                        <ComboBoxItem Content="404 - Not Found" Tag="404"/>
                        <ComboBoxItem Content="500 - Internal Server Error" Tag="500"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Target HTTP Status -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Set Response Status:" FontWeight="SemiBold"/>
                    <TextBlock Text="Change the response to this status code. Select 'No Change' to keep the original status." 
                               FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                    <ComboBox x:Name="TargetHttpStatusComboBox" HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="No Change" Tag="NoChange"/>
                        <ComboBoxItem Content="200 - OK" Tag="200"/>
                        <ComboBoxItem Content="201 - Created" Tag="201"/>
                        <ComboBoxItem Content="204 - No Content" Tag="204"/>
                        <ComboBoxItem Content="400 - Bad Request" Tag="400"/>
                        <ComboBoxItem Content="401 - Unauthorized" Tag="401"/>
                        <ComboBoxItem Content="403 - Forbidden" Tag="403"/>
                        <ComboBoxItem Content="404 - Not Found" Tag="404"/>
                        <ComboBoxItem Content="500 - Internal Server Error" Tag="500"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Response Type -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Response Type:" FontWeight="SemiBold"/>
                    <RadioButtons x:Name="ResponseTypeRadioButtons" SelectionChanged="ResponseTypeRadioButtons_SelectionChanged">
                        <RadioButton x:Name="StaticResponseRadioButton" Content="Static Response" GroupName="ResponseType" IsChecked="True"/>
                        <RadioButton x:Name="DynamicResponseRadioButton" Content="Dynamic Response" GroupName="ResponseType"/>
                    </RadioButtons>
                </StackPanel>
                
                <!-- Static Response Text Area -->
                <StackPanel x:Name="StaticResponsePanel" Spacing="8">
                    <TextBlock Text="Static JSON Response:" FontWeight="SemiBold"/>
                    <TextBox x:Name="StaticResponseTextBox" 
                            AcceptsReturn="True" 
                            TextWrapping="Wrap" 
                            MinHeight="150"
                            MaxHeight="300"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            PlaceholderText="Paste your JSON response here..."/>
                </StackPanel>
                
                <!-- Dynamic Response Text Area (hidden initially) -->
                <StackPanel x:Name="DynamicResponsePanel" Spacing="8" Visibility="Collapsed">
                    <TextBlock Text="Dynamic Response Script:" FontWeight="SemiBold"/>
                    <TextBox x:Name="DynamicResponseTextBox" 
                            AcceptsReturn="True" 
                            TextWrapping="Wrap" 
                            MinHeight="150"
                            MaxHeight="300"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            FontFamily="Consolas">
                        <TextBox.Text>def handle_wemod_response(flow: http.HTTPFlow) -> None:
    content_type = flow.response.headers.get("Content-Type", "").lower()
    if "application/json" not in content_type:
        return
    try:
        response_data = json.loads(flow.response.content)
        #Temp
        new_content = json.dumps(response_data).encode("utf-8")
        flow.response.content = new_content
        flow.response.headers["Content-Length"] = str(len(new_content))
        flow.response.headers["Content-Type"] = content_type</TextBox.Text>
                    </TextBox>
                </StackPanel>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page> 